\newcommand{\TriSSS}[3]{
\coordinate (AAA) at (0,0);
\coordinate (BBB) at (#1,0);
\path[name path=arc1] ($(AAA)-(0,#2)$) arc (-90:90:#2);
\path[name path=arc2] ($(BBB)+(0,#3)$) arc (90:180:#3);
\path [name intersections={of=arc1 and arc2,by=CCC}];
\draw (AAA) -- (BBB) -- (CCC) -- (AAA);
}

