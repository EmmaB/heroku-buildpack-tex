\newcommand\PSquare[3]{\draw[fill=POrange,xshift=#1in,yshift=#2in,rotate=#3](0,0)rectangle(1,1);}
\newcommand\PTriangle[3]{\draw[fill=PGreen,xshift=#1in,yshift=#2in,rotate=#3](0,0)--(1,0)--++(120:1)--cycle;}
\newcommand\PHexagon[3]{\draw[fill=PYellow,xshift=#1in,yshift=#2in,rotate=#3](0,0)--(1,0)--++(60:1)--++(120:1)--++(180:1)--++(240:1)--cycle;}
\newcommand\PRhombusFat[3]{\draw[fill=PBlue,xshift=#1in,yshift=#2in,rotate=#3](0,0)--(1,0)--++(60:1)--++(180:1)--cycle;}
\newcommand\PRhombusThin[3]{\draw[fill=PBeige,xshift=#1in,yshift=#2in,rotate=#3](0,0)--(1,0)--++(30:1)--++(180:1)--cycle;}
\newcommand\PTrapizoid[3]{\draw[fill=PRed,xshift=#1in,yshift=#2in,rotate=#3](0,0)--++(60:1)--++(0:1)--++(-60:1)--cycle;}
